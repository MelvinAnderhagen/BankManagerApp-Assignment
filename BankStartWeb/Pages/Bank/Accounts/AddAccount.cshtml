@page
@model BankStartWeb.Pages.Bank.Accounts.AddAccountModel
@{
}


<div class="card">
    <div class="card-header">
        <h1>New Account Form</h1>
        <form method="post">

        <div class="form-group">
            <label asp-for="AccountType">Account type: </label>
            <input class="form-control" asp-for="AccountType"/>
            <span asp-validation-for="AccountType" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Created">Created: </label>
            <input class="form-control" asp-for="Created"/>
            <span asp-validation-for="Created" class="field-validation-error"></span>
        </div>
        
        <br />
        <button asp-route-customerId="@Model.CustomerId" type="submit" class="btn btn-primary">Create customer</button>
      </form>

    </div>
</div>