@page
@model BankStartWeb.Pages.Bank.Customer.TransferModel
@{
}

<div class="card">
    <div class="card-header">
        <h1>Transer</h1>
        <form method="post">

            <div class="form-group">
                <label asp-for="Amount">Amount: </label>
                <input class="form-control" asp-for="Amount">
                <span asp-validation-for="Amount" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReceiverId">Account: </label>
                <input class="form-control" asp-for="ReceiverId"/>
                <span asp-validation-for="ReceiverId" class="field-validation-error"></span>
            </div>
        
            

            <br />
            <button type="submit" class="btn btn-light">Transfer</button>
        </form>

    </div>
</div>