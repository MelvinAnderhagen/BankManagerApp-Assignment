@page
@model BankStartWeb.Pages.Bank.Customer.DepositModel
@{
}

<div class="card">
    <div class="card-header">
        <h1>Deposit</h1>
        <form method="post">

            <div class="form-group">
                <label asp-for="Amount">Amount: </label>
                <input class="form-control" asp-for="Amount">
                <span asp-validation-for="Amount" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type">Type: </label>
                <input class="form-control" asp-for="Type"/>
                <span asp-validation-for="Type" class="field-validation-error"></span>
            </div>
        
            <br />
            <button type="submit" class="btn btn-primary">Deposit</button>
        </form>

    </div>
</div>